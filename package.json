{
  "name": "writer20",
  "version": "2.1.0",
  "description": "Desktop Translations Management Application with Electron and Lit",
  "main": "dist/main/main/index.js",
  "author": "mXaln <mxaln22@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron . --dev --no-sandbox",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "package": "npm run build && electron-builder --win --mac --linux --publish never",
    "package:win": "npm run build && electron-builder --win --publish never",
    "package:mac": "npm run build && electron-builder --mac --publish never",
    "package:linux": "npm run build && electron-builder --linux --publish never",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@fontsource/material-icons": "^5.2.7",
    "@lit-labs/router": "^0.1.4",
    "@lit-labs/virtualizer": "^2.1.1",
    "@lit/localize": "^0.12.2",
    "archiver": "^7.0.1",
    "better-sqlite3": "^12.6.2",
    "electron-log": "^5.4.3",
    "extract-zip": "^2.0.1",
    "simple-git": "^3.31.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.29.0",
    "@lit/localize-tools": "^0.8.1",
    "@types/archiver": "^7.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "electron-rebuild": "^3.2.9",
    "lit": "^3.3.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.writer20.app",
    "productName": "Writer20",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "resources/icon.png"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "icon": "resources/icon.png",
      "category": "Translation"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
