{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist/main",
    "rootDir": "src",
    "lib": ["ES2022"]
  },
  "include": ["src/main/**/*", "src/preload/**/*"],
  "exclude": ["node_modules", "src/renderer/**/*", "__mocks__"]
}
